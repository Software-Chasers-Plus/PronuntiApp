<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/impostazioni_gioco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gioco.GiocoActivity">


    <TextView
        android:id="@+id/titolo_impostazioni_gioco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/impostazioni"
        android:textColor="@color/default_impostazioni"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/font_game" />


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titolo_impostazioni_gioco"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sfondo_gioco"
            android:textColor="@color/default_impostazioni"
            android:fontFamily="@font/font_game" />

        <TextView
            android:id="@+id/sfondo_selezionato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/sfondo"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/font_game" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="25dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carousel_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager" />
    </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/lable_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cardView"
        android:textColor="@color/default_impostazioni"
        android:fontFamily="@font/font_game" />

    <LinearLayout
        android:id="@+id/linear_layout_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lable_audio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/audio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/seekBar"
            android:layout_toStartOf="@id/seekBar"
            android:src="@drawable/audio_on"
            android:layout_gravity="center"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_layout"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/default_impostazioni"
            android:max="100"
            android:paddingHorizontal="20dp"
            android:progressTint="@color/default_impostazioni"
            android:thumbTint="@color/default_impostazioni" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_personaggio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_audio"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personaggio_gioco"
            android:textColor="@color/default_impostazioni"
            android:fontFamily="@font/font_game" />

        <TextView
            android:id="@+id/personaggio_selezionato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/sfondo"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/font_game" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_personaggio"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/linear_layout_personaggio"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bottone_personaggio_precedente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                style="@style/Widget.Material3.Button.Icon"
                android:background="@color/secondaryDeserto"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/lock_icon_selezione_personaggio"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/lock_icon_24"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:id="@+id/personaggio_selezionato_immagine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bottone_personaggio_successivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                style="@style/Widget.Material3.Button.Icon"
                android:background="@color/secondaryDeserto"/>


        </LinearLayout>
        <!--
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carousel_recycler_view_personaggio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager" />
        -->
    </androidx.cardview.widget.CardView>

</RelativeLayout>