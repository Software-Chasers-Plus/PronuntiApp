<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/esercizio_tipologia3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/esercizio_tipologia3_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/esercizioGiocoTipologia3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esercizio_gioco_tipologia_3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_game"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linear_layout_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/esercizioGiocoTipologia3"
            >
            <TextView
                android:id="@+id/dataEsercizioTipologia3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dataEserciziGioco"
                android:textSize="16dp"
                android:fontFamily="@font/font_game"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>
        </LinearLayout>


        <TextView
            android:id="@+id/titoloImmagine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/font_game"
            android:text="@string/immagine_1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView1EsercizioTipologia3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_data"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1EsercizioTipologia3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titoloImmagine1">

            <ImageView
                android:id="@+id/immagine1EsercizioTipologia1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titoloImmagine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/font_game"
            android:text="@string/immagine_2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView2EsercizioTipologia3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView1EsercizioTipologia3"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2EsercizioTipologia3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titoloImmagine2">

            <ImageView
                android:id="@+id/immagine2EsercizioTipologia1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardView2EsercizioTipologia3"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/riproduci_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font_game"
                android:text="@string/riproduci_audio"
                android:textSize="16dp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/audioEsercizioTipologia3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="90dp"
                android:backgroundTint="@color/default_impostazioni"
                app:srcCompat="@drawable/baseline_play_arrow_24" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup_esercizio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_layout1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            tools:layout_editor_absoluteX="0dp">

            <RadioButton
                android:id="@+id/radioButtonImmagine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector_arancione"
                android:button="@android:color/transparent"
                android:layout_margin="10dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="@string/immagine_1"
                android:textColor="@drawable/colore_testo_radiobutton_arancione" />

            <RadioButton
                android:id="@+id/radioButtonImmagine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/radio_selector_arancione"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="@string/immagine_2"
                android:textColor="@drawable/colore_testo_radiobutton_arancione" />

        </RadioGroup>

        <Button
            android:id="@+id/conferma_risposta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conferma_risposta"
            android:fontFamily="@font/font_game"
            android:textSize="18dp"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:backgroundTint="@color/default_impostazioni"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_esercizio3"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
