<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/esercizio_tipologia1"
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >

<TextView
    android:id="@+id/esercizioGiocoTipologia1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/esercizio_gioco_tipologia_1"
    android:textSize="24sp"
    android:textStyle="bold"
    android:fontFamily="@font/font_game"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewEsercizioTipologia1"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="25dp"
    android:elevation="4dp"
    app:layout_constraintTop_toBottomOf="@id/esercizioGiocoTipologia1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/immagineEsercizioTipologia1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
</androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardViewEsercizioTipologia1"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/titoloEsercizioTipologia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/riproduci_aiuto"
            android:textSize="16dp"
            android:fontFamily="@font/font_game"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/aiuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/default_impostazioni"
            app:srcCompat="@drawable/baseline_play_arrow_24"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout1"
        android:layout_marginTop="20dp">
    <TextView
        android:id="@+id/aiutiUtilizzati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aiuti_utilizzati"
        android:textSize="16dp"
        android:fontFamily="@font/font_game"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/numero_aiuti_utilizzati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="@font/font_game"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout2"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/risposta_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inserisci_risposta"
            android:textSize="16dp"
            android:fontFamily="@font/font_game"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/risposta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="@string/upload_audio"
            android:backgroundTint="@color/default_impostazioni"
            app:srcCompat="@drawable/mic_fill0_wght400_grad0_opsz24"/>
        <ImageView
            android:id="@+id/elimina_risopsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/delete_icon"/>
    </LinearLayout>

    <Button
        android:id="@+id/conferma_risposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conferma_risposta"
        android:fontFamily="@font/font_game"
        android:textSize="18dp"
        android:textColor="@color/white"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:backgroundTint="@color/default_impostazioni"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

