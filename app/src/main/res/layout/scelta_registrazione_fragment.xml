<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/scelta_logopedista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_doctor_icon_24"
        android:drawableTint="@color/white"
        android:drawablePadding="8dp"
        android:text="@string/register_as_logopedista"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/scelta_genitore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_parents_icon_24"
        android:drawableTint="@color/white"
        android:drawablePadding="8dp"
        android:text="@string/register_as_parent"
        android:textAlignment="viewStart" />


</LinearLayout>