<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/codice_qr_del_token"
            android:textAlignment="center"
            android:textColor="@color/primaryGenitore"
            style="@style/txtPoppinsbold24_1"/>

        <ImageView
            android:id="@+id/codice_qr_token"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/qr_code_baseline_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/il_token_qr_un_codice_univoco_che_identifica_il_figlio_all_interno_dell_applicazione"
            style="@style/txtPoppinsbold13"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/condividi_qr_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/share_baseline_24"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            style="@style/Widget.Material3.Button.Icon"
            android:backgroundTint="@color/primaryGenitore"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>