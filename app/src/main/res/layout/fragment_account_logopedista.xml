<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
     >

        <!-- Foto profilo (da vedere se metterne una default) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="143dp"
                android:layout_height="121dp"
                android:layout_gravity="center"
                android:src="@drawable/logopedista_immagine_profilo"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="45dp" />

            <TextView
                android:id="@+id/dettaglio_acccount_nome_logopedista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciao, [nome logopedista!]"
                android:fontFamily="@font/varelaround_regular"
                android:textSize="30sp"/>

        </LinearLayout>

        <!-- Layout per n° bambini / iscritto da / ruolo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp">


            <!-- N° Figli -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bambino_svg_repo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_pazienti"/>

                <TextView
                    android:id="@+id/dettaglio_account_logopedista_nro_pazienti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3"/>

            </LinearLayout>
            <!-- fine N° Figli -->

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray"
                />

            <!-- Iscritto da -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:src="@drawable/time_second_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iscritto_da"/>

                <TextView
                    android:id="@+id/dettaglio_account_data_registrazione_logopedista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="01/01/2020"/>

            </LinearLayout>
            <!-- Fine Iscritto da -->

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray"
                />

            <!-- Ruolo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/role_funny_svg_repo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ruolo"/>

                <TextView
                    android:id="@+id/dettaglio_account_tipo_utente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/logopedista"/>


            </LinearLayout>
            <!-- Fine ruolo -->


        </LinearLayout>




            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/textInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_10pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:hint="@string/matricola"
                        android:textColorHint="@color/black"
                        >

                        <EditText
                            android:id="@+id/dettaglio_account_logopedista_matricola"
                            style="@style/txtPoppinsregular16black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="text"
                            android:text="@string/matricola"
                        />

                        <LinearLayout
                            android:id="@+id/layoutInAlbo"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:visibility="gone"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/inAlboMessaggio"
                                android:layout_width="match_parent"
                                android:singleLine="false"
                                android:maxLines="2"
                                android:layout_height="wrap_content"
                                android:text="@string/la_matricola_contenuta_nell_albo_dei_logopedisti"/>

                            <ImageView
                                android:id="@+id/inAlboIcona"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/confirm_svgrepo_com"/>
                        </LinearLayout>


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/textInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_10pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:hint="@string/nome_e_cognome"
                        android:textColorHint="@color/black">

                        <EditText
                            android:id="@+id/dettaglio_account_logopedista_fullname"
                            style="@style/txtPoppinsregular16black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="text"
                            android:text="@string/name" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/textInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_10pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:hint="@string/email"
                        android:textColorHint="@color/black">

                        <EditText
                            android:id="@+id/dettaglio_account_logopedista_email"
                            style="@style/txtPoppinsregular16black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="none"
                            android:text="@string/email" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <!-- Button logout -->
        <LinearLayout
            android:id="@+id/logout_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/varelaround_regular"
                android:text="@string/logout"></TextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logout_sketch_svgrepo_com"></ImageView>

            <!-- Fine logout button -->
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>