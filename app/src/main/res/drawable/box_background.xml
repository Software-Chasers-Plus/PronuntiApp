<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bordo della box -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- Colore di riempimento della box -->
            <corners android:radius="8dp"/> <!-- Angoli arrotondati (personalizzabili) -->
        </shape>
    </item>
    <!-- Sfondo della box -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Colore di sfondo della box -->
            <corners android:radius="8dp"/> <!-- Angoli arrotondati (personalizzabili) -->
        </shape>
    </item>
</layer-list>
